<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:paddingBottom="@dimen/y24"
    android:paddingLeft="@dimen/x32"
    android:paddingRight="@dimen/x32"
    android:paddingTop="@dimen/y24">

    <com.neuroandroid.pyreader.widget.NoPaddingTextView
        android:id="@+id/tv_book_community"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="大主宰的社区"
        android:textColor="@color/colorGray333"
        android:textSize="14sp"/>

    <com.neuroandroid.pyreader.widget.NoPaddingTextView
        android:id="@+id/tv_book_posts_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_book_community"
        android:layout_marginTop="@dimen/y12"
        android:text="共有1675个帖子"
        android:textColor="@color/colorGray666"
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_arrow_right"/>
</RelativeLayout>