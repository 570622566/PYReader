<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/backgroundPanel"
    android:layout_margin="@dimen/x16"
    app:cardCornerRadius="@dimen/x8"
    app:cardElevation="@dimen/x4"
    app:contentPaddingRight="@dimen/x16"
    app:contentPaddingTop="@dimen/y8"
    app:contentPaddingBottom="@dimen/y8"
    app:contentPaddingLeft="@dimen/x16">

    <com.neuroandroid.pyreader.widget.NoPaddingTextView
        android:id="@+id/tv_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGray333"
        android:textSize="14sp"
        tools:text="text"/>
</android.support.v7.widget.CardView>