<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="@dimen/x240"
        android:layout_height="wrap_content"
        android:background="@drawable/border_loading_dialog_light"
        android:orientation="vertical"
        android:paddingBottom="@dimen/y16">

        <ImageView
            android:id="@+id/iv_book_read_loading"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y160"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/book_reader_loading"
            android:tint="@color/backgroundColorDark"/>

        <com.neuroandroid.pyreader.widget.NoPaddingTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y16"
            android:text="正在努力加载中"
            android:textColor="@color/textColor"
            android:textSize="13sp"/>
    </LinearLayout>
</LinearLayout>