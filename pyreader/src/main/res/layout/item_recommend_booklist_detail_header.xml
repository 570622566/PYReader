<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/x16"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="@dimen/x12"
    app:cardElevation="@dimen/x4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/y32"
        android:paddingLeft="@dimen/x16"
        android:paddingRight="@dimen/x16"
        android:paddingTop="@dimen/x32">

        <com.neuroandroid.pyreader.widget.NoPaddingTextView
            android:id="@+id/tv_book_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGray333"
            android:textSize="18sp"
            tools:text="追书包月精选书单之科幻第一期"/>

        <com.neuroandroid.pyreader.widget.NoPaddingTextView
            android:id="@+id/tv_book_list_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y24"
            android:textColor="@color/colorGray666"
            android:textSize="13sp"
            tools:text="开通包月，这些精品书就能免费阅读了"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y48"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_head"
                android:layout_width="@dimen/x72"
                android:layout_height="@dimen/y72"
                tools:src="@mipmap/ic_male"/>

            <com.neuroandroid.pyreader.widget.NoPaddingTextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x24"
                android:text="创建自  "
                android:textColor="@color/colorGray666"
                android:textSize="13sp"/>

            <com.neuroandroid.pyreader.widget.NoPaddingTextView
                android:id="@+id/tv_author"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/light_coffee"
                android:textSize="13sp"
                tools:text="庞瑜"/>

            <com.neuroandroid.pyreader.widget.NoPaddingTextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_color_primary_selector"
                android:clickable="true"
                android:paddingBottom="@dimen/x8"
                android:paddingLeft="@dimen/x16"
                android:paddingRight="@dimen/y16"
                android:paddingTop="@dimen/x8"
                android:text="分享"
                android:textColor="?attr/colorPrimary"
                android:textSize="13sp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>