<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="@dimen/x32">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/x88"
        android:layout_height="@dimen/y88"
        tools:src="@mipmap/ic_male"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x32"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.neuroandroid.pyreader.widget.NoPaddingTextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="@color/light_coffee"
                android:textSize="13sp"
                tools:text="ppyy一号"/>

            <com.neuroandroid.pyreader.widget.NoPaddingTextView
                android:id="@+id/tv_user_level"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x4"
                android:layout_weight="1"
                android:lines="1"
                android:textColor="@color/light_coffee"
                android:textSize="13sp"
                tools:text="@string/book_detail_user_lv"/>

            <com.neuroandroid.pyreader.widget.NoPaddingTextView
                android:id="@+id/tv_discussion_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x4"
                android:lines="1"
                android:textColor="@color/colorGray666"
                android:textSize="13sp"
                tools:text="昨天"/>
        </LinearLayout>

        <com.neuroandroid.pyreader.widget.NoPaddingTextView
            android:id="@+id/tv_discussion_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y8"
            android:textColor="@color/colorGray333"
            android:textSize="14sp"
            tools:text="非常好看的一本书"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y8"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x24"
                android:layout_height="@dimen/y24"
                app:srcCompat="@drawable/ic_comment"/>

            <com.neuroandroid.pyreader.widget.NoPaddingTextView
                android:id="@+id/tv_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x8"
                android:textColor="@color/colorGray999"
                android:textSize="11sp"
                tools:text="308"/>

            <ImageView
                android:layout_width="@dimen/x24"
                android:layout_height="@dimen/y24"
                android:layout_marginLeft="@dimen/x16"
                app:srcCompat="@drawable/ic_favorite"/>

            <com.neuroandroid.pyreader.widget.NoPaddingTextView
                android:id="@+id/tv_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x8"
                android:textColor="@color/colorGray999"
                android:textSize="11sp"
                tools:text="38"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>